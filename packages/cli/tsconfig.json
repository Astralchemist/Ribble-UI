{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "noEmit": false,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "erasableSyntaxOnly": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

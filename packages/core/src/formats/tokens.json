{
  "color": {
    "light": {
      "blue": { "600": "#2563eb" },
      "purple": { "500": "#a21caf" },
      "green": { "500": "#22c55e" },
      "yellow": { "500": "#eab308" },
      "red": { "600": "#dc2626" },
      "gray": { "500": "#64748b" }
    },
    "dark": {
      "blue": { "600": "#3b82f6" },
      "purple": { "500": "#c026d3" },
      "green": { "500": "#4ade80" },
      "yellow": { "500": "#facc15" },
      "red": { "600": "#f87171" },
      "gray": { "500": "#94a3b8" }
    },
    "semantic": {
      "primary": "{color.blue.600}",
      "secondary": "{color.purple.500}",
      "success": "{color.green.500}",
      "warning": "{color.yellow.500}",
      "error": "{color.red.600}",
      "neutral": "{color.gray.500}"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": "'Inter', Arial, sans-serif",
      "mono": "'Fira Mono', monospace"
    },
    "fontSize": {
      "xs": "clamp(0.75rem, 0.7rem + 0.2vw, 0.8rem)",
      "sm": "clamp(0.875rem, 0.8rem + 0.3vw, 1rem)",
      "md": "clamp(1rem, 0.95rem + 0.4vw, 1.25rem)",
      "lg": "clamp(1.25rem, 1.1rem + 0.5vw, 1.5rem)",
      "xl": "clamp(1.5rem, 1.3rem + 0.7vw, 2rem)"
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "loose": 1.75
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "bold": 700
    }
  },
  "spacing": {
    "0": "0px",
    "1": "4px",
    "2": "8px",
    "3": "16px",
    "4": "24px",
    "5": "32px",
    "6": "40px",
    "7": "48px",
    "8": "64px"
  },
  "radius": {
    "none": "0px",
    "sm": "2px",
    "md": "4px",
    "lg": "8px",
    "xl": "16px",
    "full": "9999px"
  },
  "shadow": {
    "sm": "0 1px 2px 0 rgba(0,0,0,0.05)",
    "md": "0 4px 6px -1px rgba(0,0,0,0.1)",
    "lg": "0 10px 15px -3px rgba(0,0,0,0.1)",
    "xl": "0 20px 25px -5px rgba(0,0,0,0.15)"
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms",
      "slow": "500ms"
    },
    "easing": {
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "breakpoint": {
    "xs": "320px",
    "sm": "480px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },
  "zIndex": {
    "base": 0,
    "dropdown": 1000,
    "sticky": 1100,
    "modal": 1200,
    "popover": 1300,
    "tooltip": 1400
  }
}
